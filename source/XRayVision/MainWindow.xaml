<Window x:Class="XRayVision.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XRayVision"
        xmlns:shaders="clr-namespace:Shazzam.Shaders"
        mc:Ignorable="d"
        Title="Eye Tracking: X-ray vision" Height="700" Width="1100">
    <Grid>
        <Image Source="Images/road.jpg" Stretch="UniformToFill">
            <Image.Effect>
                <shaders:CircleRevealTransitionEffect
                    x:Name="ImageEffect"
                    />
            </Image.Effect>
        </Image>
    </Grid>
</Window>
